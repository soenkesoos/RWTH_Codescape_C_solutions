#include "codescape.h"
void run() {
    
	char moves[] = "mmmllmllmmmmrmpllmrm";
	
    for (int i = 0; moves[i] != '\0'; i++) {
        int turn = 1;
        switch (moves[i]) {
            case 'm':
                move();
                break;
            case 'l':
                turn=3;
            case 'r':
                for (int c = 0; c < turn;c++)
                    turnRight();
                break;
            case 'p':
                pickUp();
        }
    }
}
